<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8e3ec"
    tools:context=".sign_up">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="201dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/edulex" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="373dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="-2dp"
        app:srcCompat="@drawable/hathi" />

    <EditText
        android:id="@+id/name"
        android:layout_width="283dp"
        android:layout_height="50dp"

        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginStart="-42dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/namelogo"
        android:drawablePadding="10dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/email"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"

        android:layout_alignStart="@+id/name"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/emaillogo"
        android:drawablePadding="10dp"
        android:hint="Email id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/username"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/userlogo"
        android:drawablePadding="10dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/paslogo"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:text="Register" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_alignStart="@+id/sign_up"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round"
        android:text="Log In" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="92dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="-262dp"
        android:layout_marginEnd="70dp"
        android:layout_toStartOf="@+id/sign_in"
        app:srcCompat="@drawable/bird"
        tools:layout_marginTop="260dp" />
</RelativeLayout>

